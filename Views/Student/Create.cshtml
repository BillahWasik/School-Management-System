@model Student


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Student</h2>
            <hr />
            <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-3">
            <label asp-for="name"></label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Class"></label>
            <input asp-for="Class" class="form-control" />
            <span asp-validation-for="Class" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="roll"></label>
            <input asp-for="roll" class="form-control" />
            <span asp-validation-for="roll" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="section"></label>
            <input asp-for="section" class="form-control" />
            <span asp-validation-for="section" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary " style="width:150px">Create</button>
        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>

</form>

